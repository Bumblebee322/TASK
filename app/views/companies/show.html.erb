<p id="notice"><%= notice %></p>







<article class = 'company'> 
    <section class = 'company-head'>
    
    <h2><%=   @company.title %></h2> 
    <ul class = 'rating'> 
    <% (1..5).each do |i|%>
    <li class = 'rating_star' id = <%=  "#{@company.id}_#{}" %>>    </li>
    <% end %>
    <ul>
 
     <h5>
     
     <%=   @company.current_sum %>$/<%=   @company.goal %>$
     </h5> 
    
    </section>
    <small>
        <time>
        <%= t('common.creation_date')%>
        <%= @company.created_at.to_date.strftime("%d %B, %Y") %><br>
        <%= t('common.deadline')%>
       <b> <%= @company.deadline.to_date.strftime("%d %B, %Y") %> </b>
        </time>
    </small><br>

    
    <section class = 'company-summary clearfix'>
    <%= image_tag @company.image.url(:large), class: 'img-thumbnail thumb' if @company.image? %>
    <%= @company.discription %>
    </section><br> <br>
 <% if user_signed_in? and current_user.id == @company.creator_id%>  
    <%= link_to t('companies.show.edit'), edit_company_path(@company) , class: 'btn btn-primary'%> 

    <%= link_to t('companies.show.finish'), edit_company_path(@company) , class: 'btn btn-primary'%><br><br> <br>

    
</article>



<% else %>
<% if @company.deadline.to_date.strftime("%d %B, %Y") !=  @company.created_at.to_date.strftime("%d %B, %Y")%>
<%= render 'donate', company: @company %>
<% else %>
<h2><%=  t('companies.show.finished')%></h2> 


<% end %>


<% end %>


